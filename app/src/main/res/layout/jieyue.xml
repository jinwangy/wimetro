<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/header_base"/>

    <TextView android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="20dip"
        android:text="武汉地铁运营有限公司"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="18sp"/>

    <TextView android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="20dip"
        android:text="        当您签订该协议后,武汉地铁运营有限公司有权根据您的消费情况自动向您的渠道账户发起扣款"
        android:layout_marginLeft="10dip"
        android:textSize="16sp"/>

    <View style="@style/line"
        android:layout_marginTop="20dip"/>

    <!--<TextView android:layout_height="wrap_content"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_marginTop="20dip"-->
        <!--android:text="        尊敬的用户,抱歉,解约功能处于内测阶段,将在后续开通"-->
        <!--android:layout_marginLeft="10dip"-->
        <!--android:textColor="@color/red"-->
        <!--android:textSize="16sp"/>-->

    <!--<View style="@style/line"-->
        <!--android:layout_marginTop="20dip"/>-->

    <RelativeLayout android:layout_marginTop="20dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dip"
            android:text="签约协议号:"
            android:textSize="16sp"/>

        <TextView android:id="@+id/xyh_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dip"
            android:textColor="@color/black"
            android:text=""
            android:textSize="16sp"/>

    </RelativeLayout>

    <View style="@style/line"
        android:layout_marginTop="20dip"/>

    <RelativeLayout android:layout_marginTop="20dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dip"
            android:text="签约渠道:"
            android:textSize="16sp"/>

        <TextView android:id="@+id/jyqd_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dip"
            android:textColor="@color/black"
            android:text=""
            android:textSize="16sp"/>

    </RelativeLayout>

    <View style="@style/line"
        android:layout_marginTop="20dip"/>
    <EditText
        android:visibility="gone"
        android:id="@+id/pwd_et"
        android:layout_width="match_parent"
        android:layout_height="50.0dip"
        android:layout_marginLeft="12.0dip"
        android:layout_marginRight="12.0dip"
        android:layout_marginTop="5.0dip"
        android:background="#ffffff"
        android:drawablePadding="10.0dip"
        android:digits="1234567890abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:hint="请输入密码(登录密码)"
        android:inputType="textPassword"
        android:paddingBottom="2.0dip"
        android:paddingLeft="15.0dip"
        android:paddingRight="15.0dip"
        android:paddingTop="2.0dip"
        android:drawableLeft="@drawable/password_login"
        android:maxLines="1"
        android:maxLength="12"
        android:textColorHint="#ff999999"
        android:textSize="16.0sp" />

    <Button android:id="@+id/submit_btn"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        style="@style/greenButton"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape"
        android:text="解约" />

</LinearLayout>