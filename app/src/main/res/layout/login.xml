<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f6"
    android:orientation="vertical">

    <include layout="@layout/header_base"/>

    <ImageView
        android:id="@+id/login_banner_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/login_baner"/>

    <EditText
        android:id="@+id/loginName_et"
        android:layout_width="match_parent"
        android:layout_height="60.0dip"
        android:background="#ffffff"
        android:drawablePadding="10.0dip"
        android:digits="1234567890abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:hint="@string/login_user"
        android:paddingBottom="2.0dip"
        android:paddingLeft="15.0dip"
        android:paddingRight="15.0dip"
        android:paddingTop="2.0dip"
        android:maxLines="1"
        android:maxLength="16"
        android:drawableLeft="@drawable/account_login"
        android:textColorHint="#ff999999"
        android:textSize="16.0sp" />

    <TextView style="@style/line"
        android:layout_height="1dp"
        android:background="#e1dfda"/>

    <EditText
        android:id="@+id/passwd_et"
        android:layout_width="match_parent"
        android:layout_height="60.0dip"
        android:background="#ffffff"
        android:drawablePadding="10.0dip"
        android:digits="1234567890abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:hint="@string/login_password"
        android:inputType="textPassword"
        android:paddingBottom="2.0dip"
        android:paddingLeft="15.0dip"
        android:paddingRight="15.0dip"
        android:paddingTop="2.0dip"
        android:maxLines="1"
        android:maxLength="12"
        android:drawableLeft="@drawable/password_login"
        android:textColorHint="#ff999999"
        android:textSize="16.0sp" />

    <Button android:id="@+id/login_btn"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        style="@style/greenButton"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape"
        android:text="登录" />

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView android:id="@+id/go_register_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12.0dip"
            android:autoLink="all"
            android:textColor="#00a2e7"
            android:text="@string/want_register"
            android:textSize="14.0sp"/>

        <TextView android:id="@+id/pwd_forgot_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12.0dip"
            android:textColor="#96928d"
            android:text="@string/forget_password"
            android:textSize="14.0sp"/>

    </RelativeLayout>

</LinearLayout>
