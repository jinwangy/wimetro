<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/header_base"/>


    <EditText
        android:id="@+id/forget_account_et"
        android:layout_width="match_parent"
        android:layout_height="60.0dip"

        android:background="#ffffff"
        android:drawablePadding="10.0dip"
        android:digits="1234567890"
        android:hint="请输入你的手机号码"
        android:paddingBottom="2.0dip"
        android:paddingLeft="15.0dip"
        android:paddingRight="15.0dip"
        android:paddingTop="2.0dip"
        android:maxLines="1"
        android:maxLength="11"
        android:drawableLeft="@drawable/phone"
        android:textColorHint="#ff999999"
        android:textSize="16.0sp" />

    <TextView
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#96928d"
        android:text="密码找回方式:"
        android:textSize="14.0sp"/>

    <RelativeLayout android:id="@+id/message_validate_rl"
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:background="@color/white"
        android:layout_marginTop="10dip">

        <CheckBox android:id="@+id/message_validate_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dip"
            android:button="@drawable/checkbox_style"
            android:checked="true"/>

        <TextView android:id="@+id/message_validate_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="45dip"
            android:drawablePadding="8.0dip"
            android:drawableLeft="@drawable/phone_check"/>

    </RelativeLayout>

    <RelativeLayout android:id="@+id/mail_validate_rl"
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:background="@color/white"
        android:layout_marginTop="5dip"
        android:visibility="gone">

        <CheckBox android:id="@+id/mail_validate_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dip"
            android:button="@drawable/checkbox_style"
            android:checked="false"/>

        <TextView android:id="@+id/mail_validate_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="45dip"
            android:drawablePadding="8.0dip"
            android:drawableLeft="@drawable/mail_check"/>

    </RelativeLayout>

    <Button android:id="@+id/find_btn"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        style="@style/greenButton"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape"
        android:text="立即找回" />

</LinearLayout>